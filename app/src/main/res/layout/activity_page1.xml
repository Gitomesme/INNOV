<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/buttonConexPage1"
        android:layout_width="281dp"
        android:layout_height="111dp"
        android:layout_marginBottom="56dp"
        android:text="Connexion"
        android:backgroundTint="@color/darkblue"
        app:layout_constraintBottom_toTopOf="@+id/buttonInscriPage1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonInscriPage1"
        android:layout_width="281dp"
        android:layout_height="111dp"
        android:layout_marginBottom="48dp"
        android:text="Inscription"
        android:backgroundTint="@color/darkblue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="404dp"
        android:layout_height="355dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonConexPage1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/studentearth_planete" />

</androidx.constraintlayout.widget.ConstraintLayout>